                <th scope="col">Last Name</th>
                <th scope="col">email</th>
                <th scope="col">Nationality</th> 
            </tr>
            <tbody class="table-group-divider">
                <tr>
                    <td><%= @random["results"][0]["name"]["title"].upcase %></td>
