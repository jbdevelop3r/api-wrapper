<div class="container my-5">
    <div class="row">
        <h2> Miss Universe: </h2>
        <table class="table table-bordered text-center">
            <tr class= "text-light" style="background-color: #3C4048;">
                <th scope="col">Title</th>
                <th scope="col">First Name</th>
                <th scope="col">Last Name</th>
                <th scope="col">email</th>
                <th scope="col">avatar</th>
            </tr>
            <tbody class="table-group-divider">
                <tr>
                    <td><%= @random["results"][0]["name"]["title"]%></td>
                    <td><%= @random["results"][0]["name"]["first"]%></td>
                    <td><%= @random["results"][0]["name"]["last"]%></td>
                    <td><%= @random["results"][0]["email"]%></td>
                    <td><%=link_to "See picture", @random["results"][0]["picture"]["large"], style: "text-decoration: none; color: black;"%></td>
                </tr>
            </tbody>
        </table>
    </div>
</div>



<table class="table">
 <tr>
    <th scope="col">Title</th>
    <th scope="col">First Name</th>
    <th scope="col">Last Name</th>
    <th scope="col">email</th>
    <th scope="col">avatar</th>
  </tr>
<% @selected["results"].each do |selected| %>
    <tr>
        <td> <%= selected["name"]["title"] %> </td>
        <td> <%= selected["name"]["first"] %> </td>
        <td> <%= selected["name"]["last"] %> </td>
        <td> <%= selected["email"] %> </td>
        <td> <%= link_to "See picture", selected["picture"]["large"] %> </td>
    </tr>
  <% end %>
</table>



