<p class="d-flex justify-content-end"> <span class="home-btn"> <%= link_to "Home", random_index_path, class: "home" %> <span> </p>

<div class="container my-3">
    <div class="row">
        <h3 style="display: flex; justify-content: center; margin-bottom: 15px;"> Login Information </h3>
        <table class="table text-center">
            <tr class= "text-light" style="background-color: #282A3A;">
                <th scope="col">Username</th>
                <th scope="col">Password</th>
            </tr>
            <tbody class="table-group-divider">
                <tr>
                    <td><%= @credentials["results"][0]["login"]["username"] %></td>
                    <td><%= @credentials["results"][0]["login"]["password"] %></td>                                                                                                                                                                                          </td> 
                </tr>
            </tbody>
        </table>
    </div>
</div>

<div style="display: flex; justify-content: center; margin-top: 25px;"> <%= button_to "Get another set", credentials_path, :method => :get, class: "btn btn-warning text-dark" %> </div>

