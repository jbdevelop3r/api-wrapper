<p class="d-flex justify-content-end"> <span class="home-btn"> <%= link_to "Home", random_index_path, class: "home" %> <span> </p>

<div class="container my-3">
    <div class="row">
        <h3 style="display: flex; justify-content: center;"> Excluding some information </h3>
        <table class="table text-center">
            <tr class= "text-light" style="background-color: #282A3A;">
                <th scope="col">First Name</th>
                <th scope="col">Last Name</th>
                <th scope="col">Phone Number</th>
                <th scope="col">Email</th>
            </tr>
            <tbody class="table-group-divider">
                <% @exclude["results"].each do |exc| %>
                <tr> 
                    <td><%= exc["name"]["first"].upcase %></td>
                    <td><%= exc["name"]["last"].upcase %></td>
                    <td><%= exc["phone"] %></td>
                    <td><%= exc["email"] %></td>                                                                                                                                                                                              </td>
                </tr>
                <% end %>
            </tbody>
        </table>
    </div>
</div>

<div style="display: flex; justify-content: center; margin-top: 25px;"> <%= button_to "Get another set", exclude_information_path, :method => :get, class: "btn btn-warning text-dark" %> </div>
