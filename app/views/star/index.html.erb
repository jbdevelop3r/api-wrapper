

<div class="container my-3">
    <div class="row">
        <h3 style="display: flex; justify-content: center; margin-bottom: 15px;"> Filtered Result</h3>
        <table class="table text-center align-middle">
            <tr class= "text-light" style="background-color: #282A3A;">
                <th scope="col">Title</th>
                <th scope="col">First Name</th>
                <th scope="col">Cell Number</th>
                <th scope="col">Username</th>
            </tr>
            <tbody class="table-group-divider">
                <% @people["results"].each do |person| %>
                <tr class="display-7"> 
                    <td><%= person["name"].upcase %></td>                                                                                                                                                                                   </td> 
                </tr>
                <% end %>
            </tbody>
        </table>
    </div>
</div>

<div style="display: flex; justify-content: center; margin-top: 25px;"> <%= button_to "Get another set", filtered_result_path, :method => :get, class: "btn btn-warning text-dark" %> </div>
