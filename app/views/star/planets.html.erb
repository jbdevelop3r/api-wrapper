<div class="container my-3">
    <div class="row">
        <h3 style="display: flex; justify-content: center; margin-bottom: 15px;"> Star Wars Planets </h3>
        <table class="table text-center align-middle">
            <tr class= "text-light" style="background-color: #282A3A;">
                <th scope="col">Name</th>
                <th scope="col">Rotation Period</th>
                <th scope="col">Orbital Period</th>
                <th scope="col">Climate</th>
                <th scope="col">Population</th>
            </tr>
            <tbody class="table-group-divider">
                <% @planets["results"].each do |planet| %>
                <tr class="display-7"> 
                    <td><%= planet["name"].upcase %></td> 
                    <td><%= planet["rotation_period"].upcase %></td> 
                    <td><%= planet["orbital_period"].upcase %></td> 
                    <td><%= planet["climate"].upcase %></td> 
                    <td><%= planet["population"].upcase %></td>                                                                                                                                                                                   </td> 
                </tr>
                <% end %>
            </tbody>
        </table>
    </div>
</div>

